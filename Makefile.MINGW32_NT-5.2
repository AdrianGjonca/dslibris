# Mount point for media.
MEDIAROOT			:=	/c/mnt/NDS
# Compact flash image file for emulation.
CFLASH_IMAGE		:=	cflash.img
# Path to access mounted emulation image.
CFLASH_MOUNTPOINT	:=	./cflash

# Mount emulator disk image.
mount:
	- mkdir $(CFLASHROOT)
	chmod a+w $(CFLASHROOT)
	sudo mount -t vfat -o loop -o rw,uid=$(USER),gid=$(USER) $(CFLASHIMAGE) $(CFLASHROOT)

# Unmont image.
umount:
	sync
	- sudo umount $(CFLASHROOT)
	- rmdir $(CFLASHROOT)

# Unmount media card.
eject:
	sync
	- umount $(MEDIAROOT)
	