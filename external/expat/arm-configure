#!/bin/sh
./configure --host=arm-eabi --prefix=$DEVKITARM \
    CFLAGS="-g -Wall -O2 -mcpu=arm9tdmi -mtune=arm9tdmi -fomit-frame-pointer -ffast-math -mthumb -mthumb-interwork -DARM9 -I$DEVKITARM" \
    CXXFLAGS="$CFLAGS -fno-rtti -fno-exceptions" \
    LDFLAGS="-specs=ds_arm9.specs -mthumb -mthumb-interwork -L$DEVKITARM/lib"

